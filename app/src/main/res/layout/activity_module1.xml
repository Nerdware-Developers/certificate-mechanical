<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/white"
    tools:context=".Module_1">

    <RelativeLayout
        android:layout_width="match_parent"
        android:id="@+id/ret"
        android:layout_height="60sp"
        android:background="@color/white"
        tools:ignore="MissingConstraints">

        <ImageView
            android:layout_width="40sp"
            android:layout_height="40sp"
            android:src="@drawable/back_btn"
            android:layout_marginTop="10sp"
            android:id="@+id/back_btn"/>

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Module 1"
            android:textSize="20sp"
            android:layout_toEndOf="@id/back_btn"
            android:textStyle="bold"
            android:textColor="@color/lavender"
            android:layout_centerInParent="true"
            android:layout_marginLeft="120sp"
            />

    </RelativeLayout>


    <androidx.recyclerview.widget.RecyclerView
        android:id="@+id/module_recyclerview"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
       android:layout_below="@id/module1"

        >

    </androidx.recyclerview.widget.RecyclerView>


    <com.google.android.gms.ads.AdView
        android:id="@+id/module1"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@id/ret"
        android:layout_centerHorizontal="true"
        app:adSize="BANNER"
        app:adUnitId="ca-app-pub-2829905592411826/2552596821" />



</RelativeLayout>